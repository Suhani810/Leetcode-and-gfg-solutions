class Solution {
  public:
    int maxSubarraySum(vector<int> &arr) {
        int n = arr.size();
        int maxsum = INT_MIN;
        int currentsum = 0;
        for(int i=0;i<n;i++){
            currentsum = currentsum + arr[i];
            maxsum = max(currentsum , maxsum);
            if(currentsum<0){
                currentsum = 0;
            }
        }
        return maxsum;
    }
};
